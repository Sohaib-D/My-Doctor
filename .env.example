# Application
APP_ENV=development
DEBUG=true
APP_NAME=Personal Doctor AI
SECRET_KEY=replace-with-a-long-random-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# Database
# SQLite default for local single-command setup:
DATABASE_URL=sqlite:///./personal_doctor.db

# Optional AES key for encrypted chat text.
# If omitted, SECRET_KEY-derived encryption is used.
APP_AES_KEY=

# AI + research providers
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.3-70b-versatile
NCBI_API_KEY=your_ncbi_api_key

# Optional Firebase Admin (only needed if you use POST /login with Firebase ID token)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# API controls
RATE_LIMIT_PER_MINUTE=30
CORS_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

