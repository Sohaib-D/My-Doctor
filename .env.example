APP_NAME=FastAPI Auth Service
APP_ENV=development
DEBUG=true
PORT=8000

# PostgreSQL
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/personal_doctor

# JWT
SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Groq (chat)
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_VISION_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# Google login
GOOGLE_CLIENT_ID=

# Email verification + feedback (SendGrid)
SENDGRID_API_KEY=
FROM_EMAIL=
SENDGRID_FROM_NAME=My Doctor
ADMIN_EMAIL=
VERIFY_URL_BASE=http://localhost:5173/verify-email

# Admin panel auth
ADMIN_PANEL_EMAIL=
ADMIN_PANEL_PASSWORD_HASH=
ADMIN_SESSION_HOURS=8

# Optional dashboard metric (0 disables remaining-usage calculation)
GROQ_DAILY_LIMIT=0

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173
